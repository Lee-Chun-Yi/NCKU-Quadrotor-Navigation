{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run cf4pwm (prompt URI)",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/Debug/bin/Debug/cf4pwm_runner_win.exe",
      "args": [
        "--uri", "${input:radiouri}",
        "--rate", "500",
        "--csv", "metrics.csv",
        "--target", "${input:xyz}"
      ],
      "cwd": "${workspaceFolder}/build/Debug/bin/Debug",
      "console": "integratedTerminal",
      "preLaunchTask": "Copy libusb dll (Debug)"
    }
  ],
  "inputs": [
    {
      "id": "radiouri",
      "type": "promptString",
      "description": "Enter radio URI (e.g. radio://0/90/2M)",
      "default": "radio://0/90/2M"
    },
    {
      "id": "xyz",
      "type": "promptString",
      "description": "Enter target x,y,z (floats, CSV)",
      "default": "0,0,700"
    }
  ]
}
