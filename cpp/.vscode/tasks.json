{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "CMake: Configure",
      "type": "cmake",
      "command": "configure",
      "problemMatcher": []
    },
    {
      "label": "CMake: Build (Release)",
      "type": "cmake",
      "command": "build",
      "targets": [ "cf4pwm_runner_win" ],
      "group": { "kind": "build", "isDefault": true },
      "problemMatcher": []
    },
    {
      "label": "CMake: Clean",
      "type": "cmake",
      "command": "clean",
      "problemMatcher": []
    },
    {
      "label": "Run cf4pwm (Release)",
      "type": "shell",
      "dependsOn": [ "CMake: Build (Release)" ],
      "command": "${command:cmake.launchTargetPath}",
      "args": [
        "--uri", "radio://0/80/2M",
        "--rate", "500",
        "--affinity", "3",
        "--prio", "high",
        "--spin-tail"
      ],
      "options": { "cwd": "${workspaceFolder}" },
      "problemMatcher": []
    }
  ]
}
